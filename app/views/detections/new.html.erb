<div class="my-80">
  <h2 class="text-center m-16 font-mono font-bold text-xl">Uploud new image</h2>
    <%= form_with model: @detection, class:"flex justify-center items-center", local: true  do |form| %>
      <%= form.file_field :before, class: "rounded-l-lg p-4 border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white" %><br>
      <%= form.submit "Detect", class: "bg-green-500 px-8 rounded-r-lg text-white font-bold p-4 uppercase border-green-800 border-t border-b border-r" %>
    <% end %>
</div>
